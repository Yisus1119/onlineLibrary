<div class="row">

    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="card">
            <div class="card-header bg-dark text-white">
                {{#if editMode}} Edicion{{else}}Creacion{{/if}} de editorial</div>
            <div class="card-body">

                <form method="POST" action="{{#if editMode}}/edit-editorial {{else}} /create-editorial{{/if}}">

                    <div class="mb-3">
                        <label for="editorial" class="form-label">Nombre de la editorial</label>
                        <input type="text" class="form-control" id="editorial" name="Editorial"
                            value="{{#if editMode}}{{editorial.NombreEditorial}}{{/if}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono de la editorial</label>
                        <input type="text" class="form-control" id="telefono" name="Telefono"
                            value="{{#if editMode}}{{editorial.TelefonoEditorial}}{{/if}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="pais" class="form-label">País de la editorial</label>
                        <input type="text" class="form-control" id="pais" name="Pais"
                            value="{{#if editMode}}{{editorial.PaisEditorial}}{{/if}}" required>
                    </div>

                    {{#if editMode}}
                    <input type="hidden" name="idEditorial" value="{{editorial.idEditorial}}">
                    {{/if}}

                    <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
                    <a href="/editorial" type="button" class="btn btn-warning">Volver atras</a>
                </form>


            </div>

        </div>
    </div>
</div>