<section class="py-2 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light text-light">Listado de categorias</h1>
            <p>
                <a href="/formCategory" class="btn btn-success my-2">Crear nueva categoria</a>
            </p>
        </div>
    </div>
</section>



<div class="container">
    <div class="row">
        {{#each categorieList as |categoria|}}

        <div class="card col-md-3">
            <div class="card-body">
                <h5 class="card-title">{{categoria.NombreCategoria}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{categoria.DescripcionCategoria}}</h6>
                <p class="card-text">{{categoria.description}}</p>
                <p class="card-text">Cantidad de libros asociados</p>
                <a href="/edit-categorie/{{categoria.idCategoria}}?edit=true" class="btn btn-success">Editar</a>

                <form class="form-inline" action="/delete-categorie" method="POST">
                    <input type="hidden" name="idCategoria" value="{{categoria.idCategoria}}" />
                    <button type="submit" href="#" class="btn btn-danger ">Eliminar</button>
                </form>
            </div>
        </div>

        {{/each}}

    </div>
</div>