<div class="row">

    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <div class="card">
            <div class="card-header bg-dark text-white">
                {{#if editMode}} Edicion{{else}}Creacion{{/if}} de categorias</div>
            <div class="card-body">

                <form method="POST" action="{{#if editMode}}/edit-categorie {{else}}/create-category{{/if}}">

                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre de la categoria</label>
                        <input type="text" class="form-control" id="name" name="Name"
                            value="{{#if editMode}}{{categoria.NombreCategoria}}{{/if}}" required>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Descripcion</label>
                        <textarea name="Description" class="form-control" id="description" cols="60"
                            rows="5"> {{#if editMode}}{{categoria.DescripcionCategoria}}{{/if}}</textarea>
                    </div>


                    {{#if editMode}}
                    <input type="hidden" name="idCategoria" value="{{categoria.idCategoria}}">
                    {{/if}}

                    <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
                    <a href="/categories" type="button" class="btn btn-warning">Volver atras</a>
                </form>


            </div>

        </div>
    </div>
</div>